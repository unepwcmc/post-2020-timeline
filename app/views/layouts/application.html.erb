<!DOCTYPE html>
<html>
  <head>
    <%= render 'global/head' %>    
  </head>

  <body>
    <div id="v-app">

      <modal></modal>
      <modal-wrapper></modal-wrapper>

      <back-to-top></back-to-top>

      <reveal-target>
        <filters :filters="<%= @filters %>"></filters>
      </reveal-target>

      <header class="header">
        <%= render 'global/topbar' %>
        
        <div slot="control-bar">
          <%= render 'global/control-bar' %>
        </div>
      </header>
      
      <%= yield %>

    </div>

    <%= render 'global/footer' %>

    <%= javascript_pack_tag 'application' %>
  </body>
</html>
