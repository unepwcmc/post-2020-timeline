<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :event_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :event_end_date %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary, id: :event_summary %>
  </div>

  <div class="field">
    <%= form.label :relevance %>
    <%= form.text_field :relevance, id: :event_relevance %>
  </div>

  <div class="field">
    <%= form.label :outputs %>
    <%= form.text_field :outputs, id: :event_outputs %>
  </div>

  <div class="field">
    <%= form.label :cbd_relation %>
    <%= form.text_field :cbd_relation, id: :event_cbd_relation %>
  </div>

  <div class="field">
    <%= form.label :is_provisional_date %>
    <%= form.check_box :is_provisional_date, id: :event_is_provisional_date %>
  </div>

  <%= form.fields_for :categories do |category_form| %>
    <p>
      Category: <%= category_form.select :name, Category.pluck(:name) %>
    </p>
  <% end %>

  <%= form.fields_for :organisers do |organiser_form| %>
    <p>
      Organiser: <%= organiser_form.select :name, Organiser.pluck(:name) %>
    </p>  
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
